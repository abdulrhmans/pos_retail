<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="BackUpOrdersWidget">
        <div class="backup_icon">
            <img src="/pos_retail/static/src/icons/cloud.png" class="logo_shop_header"/>
        </div>
    </t>

    <t t-name="popup_backup_orders">
        <div class="modal-dialog">
            <div class="popup touch-scrollable scrollable-y" style="max-height: 600px;min-height: 300px;height: fit-content;">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title">
                            <t t-if="widget.options.title">
                                <t t-esc="widget.options.title"/>
                            </t>
                        </h4>
                        <div class="table-responsive">
                            <div class='body'>
                                <span class='product left_button backup_orders_viva_file'>
                                    <div class="button_icon">
                                        <img src="/pos_retail/static/src/icons/cloud.png" class="pos_logo"/>
                                    </div>
                                    <div class="product-name button_text">
                                        Backup to file
                                    </div>
                                </span>
                                <span class='product left_button restore_orders' style="position:relative">
                                    <div class="button_icon">
                                        <img src="/pos_retail/static/src/icons/backup.png" class="pos_logo"/>
                                    </div>
                                    <div class="product-name button_text">
                                        Restore viva file
                                        <input type="file" style="opacity:0;position:absolute;top:0;left:0;right:0;bottom:0;margin:0;cursor:pointer"/>
                                    </div>
                                </span>
                                <span class='product left_button backup_orders_viva_backend'>
                                    <div class="button_icon">
                                        <img src="/pos_retail/static/src/icons/cloud.png" class="pos_logo"/>
                                    </div>
                                    <div class="product-name button_text">
                                        Backup to backend
                                    </div>
                                </span>
                                <span class='product left_button restore_orders_viva_backend' style="position:relative">
                                    <div class="button_icon">
                                        <img src="/pos_retail/static/src/icons/backup.png" class="pos_logo"/>
                                    </div>
                                    <div class="product-name button_text">
                                        Restore viva backend
                                    </div>
                                </span>
                                <a>
                                    <li class="download_backup_orders oe_hidden">
                                        Download Backup file
                                    </li>
                                </a>

                            </div>
                        </div>
                        <div class="form-footer text-center">
                            <div class="btn btn-danger close">
                                 Close
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
