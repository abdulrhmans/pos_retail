                        <tr margin-top="20%">
                           <th style="border-bottom: solid 1px black">Category</th>
                           <th style="text-align:right;border-bottom: solid 1px black">Qty</th>
                           <th style="text-align:right;border-bottom: solid 1px black">Total</th>
