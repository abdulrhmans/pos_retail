                        <tr margin-top="20%">
                        <th style="border-bottom: solid 1px black">Journal Name</th>
                          <th style="text-align:right;border-bottom: solid 1px black">Amount</th>
                        </tr>
                        <t t-set="total" t-value="0"/>
                        <t t-foreach="payment_value" t-as="value">
                            <tr>
                                <td align="left">
                                    <t t-esc="value"/>
                                </td>
                                <td align="right">
                                    <t t-esc="widget.format_currency(value_value)"/>
                                </td>
                                <t t-set="total" t-value="value_value+total"/>
                            </tr>
                        </t>
                    </table>
                    <br/>
                    <hr/>
                    <table>
                        <tr>
                            <th>Total</th>
                            <td align="right">
                                <t t-esc="widget.format_currency(total.toFixed(2))"/>
                            </td>
                        </tr>
                    </table>
                </t>
	        </t>
    	</div>
    </t>

    <t t-name="posbox_order_summary_receipt">
        <receipt align='center' width='40' value-thousands-separator='' >
            <h1><t t-esc='pos.company.name' /></h1><br />
            <t t-if="from_date and to_date">
                <b>Start Date:</b><t t-esc="from_date" /><br/>
                <b>End Date:</b><t t-esc="to_date" />
                <br/><br/>
            </t>
            <t t-if="order_report">
                <t t-if="widget.pos.state">
                    <div><b>Order Summary</b></div>
                    <line>
                        <left><b>Order Ref</b></left>
                        <right><b>Total</b></right>
                    </line>
                    <line>
                        <left>-----------------</left>
                        <right>----------------</right>
                    </line>
                    <t t-foreach="order_report" t-as="order">
                        <line>
                            <left><t t-esc="order.order_ref" /></left>
                        </line>
                        <line indent="1">
                               <left font='b'><t t-esc="order.order_date" /></left>
                               <right><t t-esc="order.total.toFixed(2)" /></right>
                        </line>
                    </t>
                </t>

                <t t-if="!widget.pos.state">
                    <div><b>Order Summary</b></div>
                    <t t-foreach="order_report" t-as="order">
                        <br /><div style="text-transform: capitalize;"><t t-esc="order" /></div>
