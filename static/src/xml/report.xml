                               </td>
                               <td align="right">
                                   <t t-esc="value_value[0]"/>
                               </td>
                               <td align="right">
                                   <t t-esc="widget.format_currency(value_value[1].toFixed(2))"/>
                               </td>
                               <t t-set="total" t-value="value_value[1]+total"/>
