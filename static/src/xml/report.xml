    <t t-name="payment_summary_receipt">
        <div class="pos-sale-ticket">
            <div class="pos-center-align"><t t-esc="moment().format('L LT')"/>
                <br/>
                <t t-esc="widget.pos.company.name"/>
                <br/>
                Phone:
                <t t-esc="widget.pos.company.phone || ''"/>
                <br/>
                User:
                <t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/>
                <br/>
                Email:
                <t t-esc="widget.pos.company.email || ''"/>
                <br/>
                <t t-if="widget.from_date and widget.to_date">
                    From:<t t-esc="widget.from_date"/>
                    To:
                    <t t-esc="widget.to_date"/>
                    <br/>
                </t>
                <t t-if="journal_details">
                    <h3 align="left">Journal Summary</h3>
                    <t t-foreach="journal_details" t-as="journal">
                         <h4 align="left"><b>Month : </b>
                             <t t-esc="journal"/></h4>
                        <t t-set="total" t-value="0"/>
                        <table class='receipt-orderlines'>
                             <colgroup>
                                 <col width='70%'/>
                                 <col width='30%'/>
                             </colgroup>
                            <tr>
                                <th style="border-bottom: 1px solid black;" align="left">Journal</th>
                                <th style="border-bottom: 1px solid black;">Amount</th>
                             </tr>
                            <tr t-foreach="journal_value" t-as="value">
                                <td align="left">
                                    <t t-esc="value"/>
                                </td>
                                <td>
                                    <t t-esc="widget.format_currency(value_value)"/>
                                </td>
                                <t t-set="total" t-value="value_value+total"/>
                             </tr>
                         </table>
                        <hr/>
                        <table>
                            <tr>
                                <th align="left">Total</th>
                                <td width='30%'><t t-esc="widget.format_currency(total.toFixed(2))"/></td>
                            </tr>
                         </table>
                        <br/>
                    </t>
                    <t t-if="summary_data">
                        <h3 align="left">Total Summary</h3>
                        <t t-set="total_sum" t-value="0"/>
                        <table class='receipt-orderlines'>
                            <colgroup>
                                <col width='70%'/>
                                <col width='30%'/>
                            </colgroup>
                            <tr border-bottom="5px solid">
                                <th style="border-bottom: 1px solid black;" align="left">Journal</th>
                                <th style="border-bottom: 1px solid black;">Amount</th>
                            </tr>
                            <tr t-foreach="summary_data" t-as="summary">
                                <td align="left">
                                    <t t-esc="summary"/>
                                </td>
                                <td>
                                   <t t-esc="widget.format_currency(summary_value)"/>
                                </td>
                                <t t-set="total_sum" t-value="summary_value+total_sum"/>
                            </tr>
                        </table>
                        <hr/>
                        <table>
                            <tr>
                                <th align="left">Total</th>
                                <td width='30%'><t t-esc="widget.format_currency(total_sum.toFixed(2))"/></td>
                            </tr>
                        </table>
                    </t>
                </t>
                <br/>
                <t t-if="salesmen_details">
                    <h3 align="center">Payment Summary</h3>
                    <t t-foreach="salesmen_details" t-as="salesmen">
                        <h4 align="left"><b>Salesperson : </b>
                            <t t-esc="salesmen"/></h4>
                        <t t-foreach="salesmen_value" t-as="payment">
                            <h4 align="left"><b>Month : </b>
                                <t t-esc="payment"/></h4>
                            <t t-set="total" t-value="0"/>
                            <table class='receipt-orderlines'>
                                 <colgroup>
                                    <col width='70%'/>
                                     <col width='30%'/>
                                 </colgroup>
                                <tr>
                                    <th style="border-bottom: 1px solid black;" align="left">Journal</th>
                                    <th style="border-bottom: 1px solid black;">Amount</th>
                                 </tr>
                                <tr t-foreach="payment_value" t-as="value">
                                    <td align="left">
                                        <t t-esc="value"/>
                                    </td>
                                    <td>
                                        <t t-esc="widget.format_currency(value_value)"/>
                                    </td>
                                    <t t-set="total" t-value="value_value+total"/>
                                 </tr>
                             </table>
                            <hr/>
                            <table>
                                <tr>
                                    <th align="left">Total</th>
                                    <td width='30%'><t t-esc="widget.format_currency(total.toFixed(2))"/></td>
                                </tr>
                             </table>
                            <br/>
                        </t>
                    </t>
                </t>
            </div>
        </div>
    </t>

    <t t-name="posbox_payment_summary_receipt">
        <receipt align='center' width='40' value-thousands-separator='' >
            <h1><t t-esc='pos.company.name' /></h1>
            <br />
            <t t-if="from_date and to_date">
                <b>Start Date : </b><t t-esc="from_date" /><br/>
                <b>End Date : </b><t t-esc="to_date" />
            <br/><br/>
            </t>
            <t t-if="journal_details">
                <h5>Journal Summary</h5>
                <br />
                <t t-foreach='journal_details' t-as='journal'>
                     <h5 align="left"><b>Month : </b><t t-esc="journal"/></h5>
                     <t t-set="total" t-value="0"/>
                     <line>
                        <left>Journal</left>
                        <right>Amount</right>
                    </line>
                    <line>
                        <left>-----------------</left>
                        <right>----------------</right>
                    </line>
                    <t t-foreach="journal_value" t-as="value">
                         <line>
                            <left><t t-esc='value' /></left>
                            <right><t t-esc="value_value"/> </right>
                         </line>
                        <t t-set="total" t-value="value_value+total"/>
                    </t>
                    <hr />
                    <line>
                        <left>Total</left>
                        <right><t t-esc="total.toFixed(2)"/></right>
                    </line>
                    <br/>
                </t>
                <t t-if="total_summary">
                    <h3 align="center">Total Summary</h3>
                    <br/>
                    <t t-set="total_sum" t-value="0"/>
                    <line>
                        <left>Journal</left>
                        <right>Amount</right>
                    </line>
                    <line>
                        <left>-----------------</left>
                        <right>----------------</right>
                    </line>
                    <t t-foreach="total_summary" t-as="summary">
                        <line>
                            <left><t t-esc='summary' /></left>
                            <right><t t-esc="summary_value.toFixed(2)"/> </right>
                        </line>
                        <t t-set="total_sum" t-value="summary_value+total_sum"/>
                    </t>
                    <hr />
                    <line>
                        <left>Total</left>
                        <right><t t-esc="total_sum.toFixed(2)"/></right>
                    </line>
                    <br/>
                </t>
            </t>
            <br/>
            <t t-if="salesmen_details">
                <h5>Payment Summary</h5>
                <br />
                <t t-foreach='salesmen_details' t-as='salesmen'>
                    <h5 align="center"><b>Salesperson : </b><t t-esc="salesmen"/></h5>
                    <br />
                    <t t-foreach="salesmen_value" t-as="payment">
                         <h5 align="left"><b>Month : </b><t t-esc="payment"/></h5>
                        <br/>
                         <t t-set="total" t-value="0"/>
                         <line>
                            <left>Journal</left>
                            <right>Amount</right>
                        </line>
                        <line>
                            <left>-----------------</left>
                            <right>----------------</right>
                        </line>
                        <t t-foreach="payment_value" t-as="value">
                             <line>
                                <left><t t-esc='value' /></left>
                                <right><t t-esc="value_value"/> </right>
                             </line>
                            <t t-set="total" t-value="value_value+total"/>
                        </t>
                        <hr />
                        <line>
                            <left>Total</left>
                            <right><t t-esc="total.toFixed(2)"/></right>
                        </line>
                        <br/>
                    </t>
                </t>
            </t>
            <br/>
        </receipt>
    </t>

    <t t-name="order_summary_receipt">
        <div class="pos-sale-ticket">
            <div class="pos-center-align"><t t-esc="moment().format('L LT')" />
                <t t-esc="widget.pos.company.name"/>
                <br/>
                Email :
                <t t-esc="widget.pos.company.email || ''"/>
