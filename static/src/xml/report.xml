<templates name="template" xml:space="preserve">

    <t t-name="button_report_product_summary">
        <span class="product left_button">
            <div class="button_icon">
                <img src="/pos_retail/static/src/icons/report.png" class="pos_logo"/>
            </div>
            <div class="product-name button_text">
                Product Report
            </div>
        </span>
    </t>

    <t t-name="button_report_order_summary">
        <span class="product left_button">
            <div class="button_icon">
                <img src="/pos_retail/static/src/icons/report.png" class="pos_logo"/>
            </div>
            <div class="product-name button_text">
                Order Report
            </div>
        </span>
    </t>

    <t t-name="button_report_payment_summary">
        <span class="product left_button">
            <div class="button_icon">
                <img src="/pos_retail/static/src/icons/report.png" class="pos_logo"/>
            </div>
            <div class="product-name button_text">
                Payment Report
            </div>
        </span>
    </t>

    <t t-name="popup_report_payment_summary">
        <div class="modal-dialog">
            <div class="popup touch-scrollable scrollable-y"
                 style="max-height: 600px;min-height: 300px;height: fit-content;">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title">
                            Payment Summary
                        </h4>
                        <div class="row">
                            <label class="label checkbox-label">Current Session Report</label>
                            <input type="checkbox" name="current_session_report" id="current_session_report" style="box-shadow:none;width: 20px;margin-top: -8px;"
                                   class="popup_field">
                                <span class="checkbox-material"><span class="check"></span></span>
                            </input>
                        </div>
                        <div class="date_input_container">
                            <div class="row">
                                <span class='label voucher-label'>Start Date</span>
                                <div class="col-sm-10">
                                    <div class="form-group label-floating is-empty">
                                        <input type="text" class="form-control datepicker popup_field" name="from_date"/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <span class='label voucher-label'>To</span>
                                <div class="col-sm-10">
                                    <div class="form-group label-floating is-empty">
                                        <input type="text" class="form-control datepicker popup_field" name="to_date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class='row'>
                            <span class='label voucher-label'>Summary<span class="voucher-form-required"> (*)</span></span>
                            <select class='form-control voucher-select popup_field' name="summary">
                                <option value="sales_person">Salespersons</option>
                                <option value="journals">Journals</option>
                                <option value="paid">Paid</option>
                            </select>
                        </div>
                        <div class="row">
                            <label class="label voucher-label">No.of Copies</label>
                            <div class="col-sm-10">
                                <div class="form-group label-floating is-empty">
                                    <input type="number" class="form-control popup_field" name="no_of_copies" t-att-value="widget.pos.config.report_no_of_report"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-footer text-right">
                            <div class="btn btn-success pull-right confirm">
                                Print
                            </div>
                            <div class="btn btn-danger pull-left cancel">
                                Close
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

